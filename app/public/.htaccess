<IfModule mod_rewrite.c>
RewriteEngine On
# Force HTTPS if behind proxy (dev optional)
RewriteCond %{HTTP:X-Forwarded-Proto} !https
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,NE,R=301]

# Deny access to hidden files
RedirectMatch 404 /\.[^/]+
</IfModule>

<IfModule mod_headers.c>
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set Referrer-Policy "same-origin"
Header set X-XSS-Protection "1; mode=block"
Header set Content-Security-Policy "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; script-src 'self' https://cdn.jsdelivr.net; connect-src 'self';"
</IfModule>

Options -Indexes


